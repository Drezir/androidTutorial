<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/mainTopTextGps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap me for GPS"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/mainThreadCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap me for counter"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/mainToastButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show custom toast" />

        <Button
            android:id="@+id/mainListButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show list activity" />

        <Button
            android:id="@+id/mainPopupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show DatePicker popup"/>

        <Button
            android:id="@+id/mainAlertButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show alert dialog"/>

        <Button
            android:id="@+id/mainShowContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show contacts"/>

        <Button
            android:id="@+id/mainShowNotification"
            android:text="Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/mainSendBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send broadcast"/>

        <Button
            android:id="@+id/mainToggleService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toggle service"/>

        <Button
            android:id="@+id/mainServiceData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get data from service"/>

        <Button
            android:id="@+id/mainShowMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show current location on map"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>